{
  "name": "lp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:sass": "node-sass ./scss/*.scss -o ./dist/css",
    "css:postcss": "postcss ./dist/css/style.css -o ./dist/css/style.min.css",
    "clean:css": "rimraf ./dist/css && mkdir -p ./dist/css",
    "css": "npm run clean:css && npm-run-all -s css:*",
    "js:uglifyjs": "uglifyjs js/popo.js -o ./dist/js/popo.min.js",
    "clean:js": "rimraf ./dist/js && mkdir -p ./dist/js",
    "js": "npm run clean:js && npm-run-all -s js:*",
    "images:imagemin": "node imagemin.js",
    "clean:images": "rimraf ./dist/img && mkdir -p ./dist/img",
    "images": "npm run clean:images && npm-run-all -s images:*",
    "watch:server": "browser-sync start -s ./ -f 'dist/**/*.*, **/*.html, dist/**/*.css, dist/**/*.js, !node_modules/**/*'",
    "watch:css": "watch 'npm run css' ./scss",
    "watch:js": "watch 'npm run js' ./js",
    "watch:images": "onchange './img' -e '**/*.DS_Store' -- npm run images",
    "watch": "npm-run-all -p watch:*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.26.7",
    "cssnano": "^4.1.10",
    "imagemin": "^7.0.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "postcss-cli": "^6.1.3",
    "uglify-js": "^3.6.0",
    "watch": "^1.0.2"
  }
}
